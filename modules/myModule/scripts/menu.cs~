function createMenu(){
	%life_text=new GuiTextCtrl();
        %life_text.setText("LIFES");
        %life_text.Postion="10 20";
       // mySceneWindow.addGuiControl(%life_text);
        %life_text_object=new SceneObject();
         %life_text_object.setBodyType( static );
       
    // Set the position.
    %life_text_object.Position = "10 20";
    
    // Set the size.        
    %life_text_object.Size = "4 4";
    %life_text_object.createPolygonBoxCollisionShape(4,4);
        %life_text_object.attachGui(%life_text,mySceneWindow);
         myScene.add( %life_text_object);  
}
